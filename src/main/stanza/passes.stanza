defmethod print (o:OutputStream, k:Kind) :
   print{o, _} $
   match(k) :
      (k:WireKind) : "wire"
      (k:PoisonKind) : "poison"
      (k:RegKind) : "reg"
      (k:PortKind) : "port"
      (k:MemKind) : "mem"
      (k:NodeKind) : "node"
      (k:InstanceKind) : "inst"
