;            (s) : map(temp-elim-s,s)
;      InModule(info(m),name(m), ports(m), temp-elim-s(body(m)))
;
;   Circuit(info(c),modules*, main(c)) where :
;      val modules* =
;         for m in modules(c) map :
;            match(m) :
;               (m:InModule) : temp-elim(m)
